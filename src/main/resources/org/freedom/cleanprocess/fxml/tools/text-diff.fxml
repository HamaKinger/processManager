<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" minWidth="800.0" minHeight="500.0" style="-fx-background-color: #f5f5f5;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="org.freedom.cleanprocess.action.tools.TextDiffController">
    
    <!-- 顶部标题栏 -->
    <top>
        <VBox style="-fx-background-color: linear-gradient(to right, #667eea 0%, #764ba2 100%); -fx-padding: 20;" BorderPane.alignment="CENTER">
            <HBox alignment="CENTER_LEFT" spacing="15">
                <!-- 返回按钮 -->
                <Button fx:id="backButton" onAction="#handleBackButtonClick" text="&#8592; 返回" 
                        style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 16; -fx-background-radius: 6; -fx-cursor: hand; -fx-font-weight: bold;" />
                
                <VBox>
                    <Label text="文本对比工具" textFill="WHITE" style="-fx-font-weight: bold;">
                        <font>
                            <Font size="24.0" />
                        </font>
                    </Label>
                    <Label text="比较两段文本的差异，高亮显示" textFill="#e0e0e0" style="-fx-padding: 5 0 0 0;">
                        <font>
                            <Font size="12.0" />
                        </font>
                    </Label>
                </VBox>
            </HBox>
        </VBox>
    </top>
    
    <!-- 中间内容区域 -->
    <center>
        <VBox spacing="15.0" style="-fx-background-color: #f5f5f5;" maxWidth="Infinity" maxHeight="Infinity" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            
            <!-- 工具栏 -->
            <HBox spacing="12.0" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <Button fx:id="compareButton" onAction="#handleCompareButtonClick" text="对比文本" 
                        style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 10 20; -fx-background-radius: 6; -fx-cursor: hand; -fx-font-weight: bold;" />
                <Button fx:id="clearButton" onAction="#handleClearButtonClick" text="清空" 
                        style="-fx-background-color: #f56565; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 10 20; -fx-background-radius: 6; -fx-cursor: hand; -fx-font-weight: bold;" />
                <Button fx:id="swapButton" onAction="#handleSwapButtonClick" text="交换文本" 
                        style="-fx-background-color: #48bb78; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 10 20; -fx-background-radius: 6; -fx-cursor: hand; -fx-font-weight: bold;" />
                
                <!-- 对比选项 -->
                <CheckBox fx:id="ignoreWhitespaceCheckBox" text="忽略空格" selected="false"
                         style="-fx-font-size: 13px; -fx-text-fill: #2d3748; -fx-font-weight: bold;" />
                <CheckBox fx:id="ignoreCaseCheckBox" text="忽略大小写" selected="false"
                         style="-fx-font-size: 13px; -fx-text-fill: #2d3748; -fx-font-weight: bold;" />
            </HBox>
            
            <!-- 输入区域 -->
            <HBox spacing="15.0" VBox.vgrow="ALWAYS">
                <!-- 左侧文本 -->
                <VBox spacing="10" HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                    <Label text="文本 A：" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2d3748;" />
                    <TextArea fx:id="textAreaLeft" wrapText="true" VBox.vgrow="ALWAYS" 
                             promptText="请输入第一段文本..."
                             style="-fx-font-family: 'Consolas', 'Monaco', monospace; -fx-font-size: 13px; -fx-border-color: #e2e8f0; -fx-border-radius: 4; -fx-background-radius: 4;" />
                </VBox>
                
                <!-- 右侧文本 -->
                <VBox spacing="10" HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                    <Label text="文本 B：" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2d3748;" />
                    <TextArea fx:id="textAreaRight" wrapText="true" VBox.vgrow="ALWAYS" 
                             promptText="请输入第二段文本..."
                             style="-fx-font-family: 'Consolas', 'Monaco', monospace; -fx-font-size: 13px; -fx-border-color: #e2e8f0; -fx-border-radius: 4; -fx-background-radius: 4;" />
                </VBox>
            </HBox>
            
            <!-- 对比结果区域 -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <Label text="对比结果：" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2d3748;" />
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <Label fx:id="totalLinesLabel" text="总行数: 0" style="-fx-font-size: 13px; -fx-text-fill: #4a5568;" />
                    <Label fx:id="sameLinesLabel" text="相同: 0" style="-fx-font-size: 13px; -fx-text-fill: #48bb78; -fx-font-weight: bold;" />
                    <Label fx:id="diffLinesLabel" text="不同: 0" style="-fx-font-size: 13px; -fx-text-fill: #f56565; -fx-font-weight: bold;" />
                    <Label fx:id="similarityLabel" text="相似度: 0%" style="-fx-font-size: 13px; -fx-text-fill: #667eea; -fx-font-weight: bold;" />
                </HBox>
                <TextArea fx:id="resultTextArea" wrapText="false" prefHeight="150" editable="false"
                         promptText="对比结果将显示在这里...&#10;绿色背景表示相同行&#10;红色背景表示不同行"
                         style="-fx-font-family: 'Consolas', 'Monaco', monospace; -fx-font-size: 12px; -fx-border-color: #e2e8f0; -fx-border-radius: 4; -fx-background-radius: 4; -fx-background-color: #f7fafc;" />
            </VBox>
            
            <!-- 使用提示卡片 -->
            <VBox spacing="10" style="-fx-background-color: #edf2f7; -fx-background-radius: 8; -fx-padding: 15; -fx-border-color: #cbd5e0; -fx-border-width: 1; -fx-border-radius: 8;">
                <Label text="使用说明：" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #2d3748;" />
                <HBox spacing="30">
                    <VBox spacing="5">
                        <Label text="[=] 表示两行内容相同" style="-fx-font-size: 12px; -fx-text-fill: #48bb78; -fx-font-weight: bold;" />
                        <Label text="[!] 表示两行内容不同" style="-fx-font-size: 12px; -fx-text-fill: #f56565; -fx-font-weight: bold;" />
                    </VBox>
                    <VBox spacing="5">
                        <Label text="• 支持逐行对比文本差异" style="-fx-font-size: 12px; -fx-text-fill: #4a5568;" />
                        <Label text="• 可选择忽略空格和大小写" style="-fx-font-size: 12px; -fx-text-fill: #4a5568;" />
                    </VBox>
                    <VBox spacing="5">
                        <Label text="• 自动计算相似度百分比" style="-fx-font-size: 12px; -fx-text-fill: #4a5568;" />
                        <Label text="• 适用于代码、配置文件对比" style="-fx-font-size: 12px; -fx-text-fill: #4a5568;" />
                    </VBox>
                </HBox>
            </VBox>
        </VBox>
    </center>
    
    <!-- 底部状态栏 -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: white; -fx-padding: 12; -fx-border-color: #e0e0e0; -fx-border-width: 1 0 0 0;" BorderPane.alignment="CENTER">
            <Label text="提示: 文本对比工具可以快速发现两段文本的差异，支持多种对比选项" style="-fx-text-fill: #666; -fx-font-size: 11px;" />
        </HBox>
    </bottom>
    
</BorderPane>
